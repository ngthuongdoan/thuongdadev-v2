---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const detailsHref = `/projects/${project.id}`;
---

<li>
    <a href={detailsHref}>
        <Image
            src={project.data.image}
            alt={project.data.title}
            class="aspect-[1/1.33] object-center object-cover rounded-lg shadow-lg mb-4 sm:mb-0 sm:mr-4 transition-opacity hover:opacity-80"
        />
    </a>

    <div class="p-1 sm:p-2">
        <h3 class="text-base text-zinc-100">
            <a href={detailsHref} class="hover:text-zinc-300">
                {project.data.title}
            </a>
        </h3>
        <p class="text-sm text-zinc-400 text-balance">{project.data.description}</p>
        <div class="mt-2 flex items-center gap-4 text-sm">
            <a href={detailsHref} class="text-zinc-200 hover:text-white underline underline-offset-4 decoration-zinc-600">
                View details
            </a>
            <a href={project.data.link} target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-zinc-200">
                Visit project
            </a>
        </div>
    </div>
</li>
