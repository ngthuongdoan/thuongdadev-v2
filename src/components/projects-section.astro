---
import type { CollectionEntry } from "astro:content";
import ProjectCard from "./project-card.astro";

interface Props {
    title: string;
    projects: CollectionEntry<"projects">[];
    className?: string;
}

const { title, projects, className = "" } = Astro.props;
---

{
    projects.length > 0 && (
        <section class={`mt-8 sm:mt-12 ${className}`.trim()}>
            <h2 class="mb-6 text-xl font-semibold sm:text-2xl text-zinc-100">{title}</h2>
            <ul class="grid grid-cols-1 gap-16 lg:grid-cols-2 xl:grid-cols-3 sm:gap-8">
                {projects.map((project) => (
                    <ProjectCard project={project} />
                ))}
            </ul>
        </section>
    )
}
