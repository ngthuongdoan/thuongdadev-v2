---
import "../styles/global.css";
import { Font } from "astro:assets";
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

const { title, description } = Astro.props;

const defaultTitle = "Jasper Doan";
const defaultDescription = "Jasper Doan is a software developer, designer, and technology enthusiast who is passionate about creating innovative solutions and sharing knowledge with the community.";

// Get the canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = "https://thuongda.dev";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title ?? defaultTitle}</title>
		<meta name="title" content={title ?? defaultTitle} />
		<meta name="description" content={description ?? defaultDescription} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title ?? defaultTitle} />
		<meta property="og:description" content={description ?? defaultDescription} />
		<meta property="og:image" content={`${siteUrl}/social-image.jpg`} />
		<meta property="og:site_name" content="Jasper Doan" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="thuongda.dev" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title ?? defaultTitle} />
		<meta name="twitter:description" content={description ?? defaultDescription} />
		<meta name="twitter:image" content={`${siteUrl}/social-image.jpg`} />
		
		<!-- Theme Color -->
		<meta name="theme-color" content="#09090b" />
		
		<!-- Preconnect to improve performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<Font cssVariable="--font-geist" preload />
		<ClientRouter />
		<LoadingIndicator color="#f4f4f5" height="2px" />

	</head>
	<body class="min-h-screen font-sans bg-zinc-900">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
